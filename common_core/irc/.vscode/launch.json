	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug from irc",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/ircserv",
			"args": [
				"8080",
				"pass"
			],
			"MIMode": "gdb",
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Build irc",
			"miDebuggerPath": "/usr/bin/gdb",
			"externalConsole": false,
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					// "text": "-enable-pretty-printing set follow-fork-mode child",
					// "text": "set detach-on-fork off",
					"ignoreFailures": true
				}
			],
		},
